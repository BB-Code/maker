{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "yarn build",
    "beforeDevCommand": "yarn start",
    "devPath": "http://localhost:3000",
    "distDir": "../build",
    "withGlobalTauri":true
  },
  "package": {
    "productName": "maker",
    "version": "0.0.3"
  },
  "tauri": {
    "allowlist": {
      "http": {
        "all": true, 
        "request": true 
      },
      "shell": {
        "all": true, 
        "execute": true,
        "sidecar": true, 
        "open": true,
        "scope":[
          { 
            "name": "powershell", 
            "cmd": "powershell", 
            "args": true
          },
          { 
            "name": "bash", 
            "cmd": "bash", 
            "args": true
          },
          {
            "name": "explorer",
            "cmd":"explorer",
            "args": true
          },
          {
            "name": "macOpen",
            "cmd":"open",
            "args": true
          },
          {
            "name": "run-git-clone",
            "cmd": "git",
            "args": true
          }
        ]
      },
      "fs": {
        "all": true, 
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "copyFile": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true,
        "renameFile": true
      },
      "os": {
        "all": true
      },
      "dialog": {
        "all": true, 
        "open": true, 
        "save": true 
      },
      "notification": {
        "all": true 
      },
      "path": {
        "all": true
      },
      "process":{
        "all": true,
        "exit": true,
        "relaunch": true,
        "relaunchDangerousAllowSymlinkMacos": true
      },
      "window": {
        "all": true, 
        "create": true, 
        "center": true,
        "requestUserAttention": true,
        "setResizable": true,
        "setTitle": true,
        "maximize": true,
        "unmaximize": true,
        "minimize": true,
        "unminimize": true,
        "show": true,
        "hide": true,
        "close": true,
        "setDecorations": true,
        "setAlwaysOnTop": true,
        "setSize": true,
        "setMinSize": true,
        "setMaxSize": true,
        "setPosition": true,
        "setFullscreen": true,
        "setFocus": true,
        "setIcon": true,
        "setSkipTaskbar": true,
        "startDragging": true,
        "print": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "bobocode",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.tauri.bobocode",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "制造者",
        "width": 1000,
        "center": true,
        "theme":"Light"
      }
    ]
    
  }
}